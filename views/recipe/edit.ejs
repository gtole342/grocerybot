<form class="card white">
  <div>
    <label>Name:</label>
    <input type="text" name="name" value="recipe.name">
  </div>
  <div>
    <label>Prep Time:</label>
    <input type="text" name="prepTime" value="recipe.prepTime">
    <label>Cook Time:</label>
    <input type="text" name="cookTime" value="recipe.cookTime">
  </div>  
  <div>
    <label>Ingredients:</label>
    <textarea name="ingredients" id="ingredients" placeholder="Seperate recipes by commas."></textarea>
  </div>
  <div>
    <label>Instructions:</label>
    <textarea name="instructions" id="instructions" placeholder="Seperate steps by commas."></textarea>
  </div>
  <div class="card-action">
    <input type="submit" value="Submit">
  </div>
</form>